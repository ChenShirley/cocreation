<div class="fb-like" data-href=<%= "http://cocreation.ctm.nthu.edu.tw/reflashindex/#{@thisp.id}" %> data-width="600" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>


		<% if user_signed_in? %>	
				<center>
					<%= form_for @event, :url => { :controller => 'reflashindex', :action => 'create' } do |f| %>
						<div style="color:black;">
						<%= f.label :name ,'姓名：'%>
						<%= current_user.name %>
						<%= f.hidden_field :name, :value=>current_user.name %></br>

						<%= f.label :context, '意見回饋'%></br>
						<%= f.text_area :context, :value=>"？", :size=>"30x2"%>

						<%= f.hidden_field :user_id, :value=>current_user.id%> 
						<%= f.hidden_field :pro_id, :value=>@thisp.id%>    
						<%= f.hidden_field :show, :value=>true%>
						</br>
						<%= f.submit '確定送出'%>
					<% end %>
						</div>
				</center>
		<% else %>
				<center>
						<%= form_for @event, :url => { :controller => 'reflashindex', :action => 'create' } do |f| %>
						<div style="color:black;">
						<%= f.label :name ,'姓名：'%>
						<%= f.text_field :name, :value=>'訪客' %></br>

						<%= f.label :context, '意見回饋'%></br>
						<%= f.text_area :context, :value=>"？", :size=>"30x2"%>

						<%= f.hidden_field :pro_id, :value=>@thisp.id%>    
						<%= f.hidden_field :show, :value=>true%>
						</br>
						<%= f.submit '確定送出'%>
					<% end %>
						</div>
				</center>
		<% end %>

		<% @message.each do |m|%>
			<%if m.show == true%>
				</br><div>
							<span style="color:#8B3E2F;">【意見回饋】</span>
							<span style="font-weight:bolder;"><%=m.name%></span>
						</div>
						<%=m.context%></br>

				<% Question.find(m.id).answers.each do |answer|%>
					<div style="color:#8B3E2F;">
						<span style="font-weight:bolder;"><%=answer.name%></span>回應：
					</div>
					<%=answer.context%></br>
				<%end%>

					<% if user_signed_in? %>
							<%= form_for @answer, :url => { :controller => 'reflashindex', :action => 'updateanswer' } do |f| %>
								<%= f.label :context, '回應'%>
								<%= f.text_area :context, :size=>"30x1" %>
								<%= f.hidden_field :question_id, :value=>m.id%>
								<%= f.hidden_field :name, :value=>current_user.name%>
								<%= f.submit '送出'%>
							<%end%>
					<% else %>
							<%= form_for @answer, :url => { :controller => 'reflashindex', :action => 'updateanswer' } do |f| %>
								<%= f.label :context, '回應'%>
								<%= f.text_area :context, :size=>"30x1" %>
								<%= f.hidden_field :question_id, :value=>m.id%>
								<%= f.hidden_field :name, :value=>'訪客' %>
								<%= f.submit '送出'%>
							<%end%>
